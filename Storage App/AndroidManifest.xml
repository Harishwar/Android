<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harishwar.storageapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.harishwar.storageapp.MainScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.harishwar.storageapp.PrefActivity"
            android:label="@string/title_activity_pref"
            android:parentActivityName="com.harishwar.storageapp.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.harishwar.storageapp.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.harishwar.storageapp.SQLiteActivity"
            android:label="@string/title_activity_sqlite"
            android:parentActivityName="com.harishwar.storageapp.MainScreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.harishwar.storageapp.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.harishwar.storageapp.SavedListActivity"
            android:label="@string/title_activity_saved_list" >
        </activity>
    </application>

</manifest>
